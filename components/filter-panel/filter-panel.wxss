.filter-panel {
  background: #fff;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  scroll-behavior: smooth;
  scrollbar-width: none;
  -webkit-overflow-scrolling: touch;
}

.filter-scroll::-webkit-scrollbar {
  display: none;
}

.filter-item {
  display: inline-block;
  position: relative;
  padding: 0 20rpx;
  margin-right: 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #333;
  transition: all 0.25s ease;
}

.filter-item:last-child {
  margin-right: 30rpx;
}

.filter-item.active {
  color: #e4393c;
  font-weight: bold;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 6rpx;
  background: #e4393c;
}

.filter-item:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.check-icon,
.check,
.filter-item.animate {
  display: none;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.reset-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
}

.reset-btn {
  color: #666;
  background: #f5f5f5;
}

.confirm-btn {
  color: #fff;
  background: #e4393c;
}

.reset-btn:active, .confirm-btn:active {
  opacity: 0.8;
}