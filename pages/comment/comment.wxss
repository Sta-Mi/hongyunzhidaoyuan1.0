  position: absolute;
  opacity: 0.88;
  width: 100%;
  height: 1000px;
  z-index: -1;
}
.header{
  background-color: #ffffff;
}
/* comment item */
.comment-item {
  position: relative;
  border-bottom: 1px solid #ccc;
  padding: 5px 0;
  white-space: pre;
  background-color: #ffffff;
}

