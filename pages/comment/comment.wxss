.unique-button {
  position: fixed; /* 固定定位 */
  bottom: 5px; /* 距离底部5px */
  left: 5px; /* 距离左边5px */
  right: 5px; /* 距离右边5px */
  background-color: #000000; /* 按钮背景颜色 */
  color: rgb(255, 255, 255); /* 按钮文字颜色 */
  text-align: center; /* 文字居中 */
  padding: 10px; /* 内边距 */
  border-radius: 5px; /* 圆角 */
  text-decoration: none; /* 去掉下划线 */
}


/* delete button */
.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 14px;
  background: rgb(255, 255, 255);
  color: rgb(0, 0, 0);
  border: none;
  padding: 4px 10px;
  
}
