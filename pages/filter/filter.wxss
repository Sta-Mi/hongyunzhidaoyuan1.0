/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 30rpx;
}

.filter-scroll {
  white-space: nowrap;
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-item {
  display: inline-block;
  padding: 16rpx 40rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #f5f5f5;
  border-radius: 100rpx;
  transition: all 0.2s ease;
}

.filter-item.active {
  color: #fff;
  background: #e4393c;
}

.scenic-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

