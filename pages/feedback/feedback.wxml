<view class="container">
  <view class="feedback-form">
    <!-- 反馈内容 -->
    <view class="form-item">
      <textarea 
        class="feedback-input"
        placeholder="请输入您的意见或建议..."
        maxlength="{{maxContent}}"
        value="{{content}}"
        bindinput="onContentInput"
      />
      <view class="word-count">{{contentCount}}/{{maxContent}}</view>
    </view>

    <!-- 联系方式 -->
    <view class="form-item">
      <input 
        class="contact-input"
        placeholder="联系方式（选填）"
        value="{{contact}}"
        bindinput="onContactInput"
      />
    </view>

    <!-- 提交按钮 -->
    <button 
      class="submit-btn {{submitting ? 'submitting' : ''}}"
      bindtap="submitFeedback"
      disabled="{{submitting}}"
    >
      <text>{{submitting ? '提交中...' : '提交反馈'}}</text>
      <view class="loading" wx:if="{{submitting}}"></view>
    </button>

    <!-- 提示文本 -->
    <view class="tips">
      <text>感谢您的反馈，我们会认真处理您的建议</text>
    </view>
  </view>
</view> 