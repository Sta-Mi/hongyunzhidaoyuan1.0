.story-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  position: relative;
}

.background {
  position: absolute;
  opacity: 0.88;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title {
  font-size: 49px;
  color: rgb(255, 255, 255);
  margin-bottom: 80px;
}

.button {
  background-color: rgb(185, 28, 17);
  color: rgb(253, 250, 250);
  font-size: 23px;
  padding: 14px 24px;
  border-radius: 5px;
  text-align: center;
}