/* app.wxss */

.header {
  display: flex;
  font-size: 16px;
  align-items: center;
}
.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 10px;
}
.background {
  position: absolute;
  opacity: 0.88;
  width: 1000px;
  height: 1000px;
  z-index: -1;
}
.time{

  padding: 8px;
}
.comment-item {
  margin-bottom: 10px;
}

.container {
  padding: 20px;
  position: relative; /* 使背景图片定位相对于容器 */
}

textarea {
  width: 100%;
  height: 120px;
  margin-bottom: 20px;
  border: 1px solid rgb(105, 105, 105);
}
button {
  width: 100%;
  height: 40px;
  background-color: #443f3f;
  color: white;
  font-size: 18px;
  margin-top: 20px;
}

.picker {
  padding: 0px;
  background-color: #ffffff;
  border: 1px solid rgb(255, 255, 255);
  color:rgb(0, 0, 0);
  border-radius: 4px;
  width:95%;
  height:20px;
}

.navbar {
  display: flex;
  align-items: center;
  background-color: #000; /* 黑色背景 */
  color: #fff; /* 白色文字 */
  padding: 10px;
  height:5px;
}

.back-button {
  background: none;
  border: none;
  color: #fff;
  font-size: 14px;
  cursor: pointer;
}

image {
  width: 150px;
  height: 150px;
  margin-top: 0px;
  transform: scale(0.5);
}

