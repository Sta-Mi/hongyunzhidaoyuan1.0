.result-container {  
    display: flex;  
    flex-direction: column;  
    align-items: center;  
    justify-content: center;  
    height: 100vh;  
    background-color: #ffffff; /* 白色背景 */  
  }  
  
  .result-photo {  
    margin-top: 20px;  
    max-width: 90%;  
    border: 5px solid #f44336; /* 红色边框 */  
    border-radius: 10px;  
  }  
  
  .timestamp {  
    margin-top: 10px;  
    font-size: 16px;  
    color: #f44336; /* 红色 */  
  }  
  
  .clear-button {  
    margin-top: 20px;  
    padding: 10px 20px;  
    font-size: 18px;  
    color: white;  
    background-color: #f44336; /* 红色清除按钮 */  
    border: none;  
    border-radius: 5px;  
    cursor: pointer;  
  }  
  
  .back-button {  
    margin-top: 10px;  
    padding: 10px 20px;  
    font-size: 18px;  
    color: white;  
    background-color: #4caf50; /* 绿色返回按钮 */  
    border: none;  
    border-radius: 5px;  
    cursor: pointer;  
  }