.container {
  padding: 20rpx;
}

.filter-types {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  padding: 15rpx 30rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.scenic-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.loading {
  text-align: center;
  padding: 30rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 10rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.search-bar {
  padding: 20rpx 30rpx;
  background: #fff;
}

.search-input {
  display: flex;
  align-items: center;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.feedback-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.feedback-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
} 