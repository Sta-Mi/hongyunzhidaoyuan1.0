<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar" bindtap="goToSearch">
    <view class="search-input">
      <image class="search-icon" src="/images/search.png"></image>
      <text class="placeholder">搜索景区名称、展厅、时期...</text>
    </view>
  </view>

  <!-- 筛选类型列表 -->
  <view class="filter-types">
    <view 
      class="filter-item" 
      wx:for="{{filterTypes}}" 
      wx:key="id"
      data-type="{{item.id}}"
      bindtap="goToFilter"
    >
      <text>{{item.name}}</text>
    </view>
  </view>

  <!-- 景区列表 -->
  <view class="scenic-list">
    <block wx:if="{{!filterActive}}">
      <scenic-card 
        wx:for="{{scenicList}}" 
        wx:key="id" 
        scenic="{{item}}"
        bindtap="goToScenicDetail"
        data-id="{{item.id}}"
      />
    </block>
    <block wx:else>
      <scenic-card 
        wx:for="{{filteredList}}" 
        wx:key="id" 
        scenic="{{item}}"
        bindtap="goToScenicDetail"
        data-id="{{item.id}}"
      />
    </block>
  </view>

  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">加载中...</view>
  <view class="no-more" wx:if="{{!hasMore && scenicList.length > 0}}">没有更多了</view>

  <!-- 反馈按钮 -->
  <view class="feedback-btn" bindtap="goToFeedback">
    <image class="feedback-icon" src="/images/feedback.png"></image>
    <text>意见反馈</text>
  </view>

  <!-- 调试信息 -->
  <view class="debug-info" wx:if="{{filterActive}}">
    <text>筛选状态：已激活</text>
    <text>筛选结果数量：{{filteredList.length}}</text>
  </view>

  <!-- 筛选状态 -->
  <view class="filter-status" wx:if="{{filterActive}}">
    <text>已筛选 {{filteredList.length}} 个景点</text>
    <text class="clear-filter" bindtap="clearFilter">清除筛选</text>
  </view>
</view> 